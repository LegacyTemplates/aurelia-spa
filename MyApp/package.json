{
  "name": "my-app",
  "description": "An Aurelia client application.",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run build",
    "dev": "au build --env stage --watch",
    "start": "nps",
    "dtos": "cd src && typescript-ref",
    "build": "nps build",
    "publish": "npm run build && dotnet publish -c Release",
    "test": "nps test",
    "test-watch": "nps test.jest.watch"
  },
  "dependencies": {
    "@servicestack/client": "^1.0.20",
    "aurelia-animator-css": "^1.0.4",
    "aurelia-bootstrapper": "^2.3.3",
    "aurelia-polyfills": "^1.3.4",
    "bluebird": "^3.5.4",
    "bootstrap": "^4.3.1",
    "es6-shim": "^0.35.5",
    "font-awesome": "^4.7.0"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.8",
    "@types/webpack": "^4.4.29",
    "aurelia-cli": "^1.0.0-beta.15",
    "aurelia-loader-nodejs": "^1.0.1",
    "aurelia-pal-nodejs": "^1.2.0",
    "aurelia-testing": "^1.0.0",
    "aurelia-tools": "^2.0.0",
    "aurelia-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "del": "^4.1.1",
    "expose-loader": "^0.7.5",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "gulp": "^4.0.1",
    "gulp-rename": "^1.4.0",
    "gulp-util": "^3.0.8",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.4.0",
    "jest": "^24.7.1",
    "jest-cli": "^24.7.1",
    "jest-jasmine2": "^24.7.1",
    "jest-matchers": "^20.0.3",
    "json-loader": "^0.5.7",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "latest",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-jasmine": "^2.0.1",
    "karma-mocha-reporter": "latest",
    "karma-typescript-preprocessor": "^0.4.0",
    "karma-webpack": "^3.0.5",
    "minimatch": "^3.0.4",
    "nps": "^5.9.5",
    "nps-utils": "^1.7.0",
    "opn": "^6.0.0",
    "style-loader": "^0.23.1",
    "through2": "^3.0.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.4",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "uglify-js": "^3.5.9",
    "url-loader": "^1.1.2",
    "vinyl-fs": "^3.0.3",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "jest": {
    "globals": {
      "BaseUrl": "http://localhost:5000"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.spec\\.(ts|js)x?$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/bin/**",
      "!**/wwwroot/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/wwwroot/",
      "/bin/"
    ]
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "main": "dist/app.bundle.js"
}
